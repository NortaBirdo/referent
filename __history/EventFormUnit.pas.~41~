unit EventFormUnit;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.DBCtrls, Vcl.Mask,
  Vcl.Grids, Vcl.Samples.Calendar, Vcl.ComCtrls;

type
  TEventEditForm = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    Label7: TLabel;
    Label8: TLabel;
    Label9: TLabel;
    Label10: TLabel;
    Label11: TLabel;
    Label12: TLabel;
    DBCheckBox1: TDBCheckBox;
    AddDateEdit: TDBEdit;
    DBEdit2: TDBEdit;
    DBEdit3: TDBEdit;
    DBEdit4: TDBEdit;
    DBEdit6: TDBEdit;
    DBEdit7: TDBEdit;
    DBEdit8: TDBEdit;
    DBEdit9: TDBEdit;
    DBEdit11: TDBEdit;
    DBEdit12: TDBEdit;
    OkBtn: TButton;
    CancelBtn: TButton;
    Label13: TLabel;
    DBComboBox1: TDBComboBox;
    DBMemo1: TDBMemo;
    DBMemo2: TDBMemo;
    procedure CancelBtnClick(Sender: TObject);
    procedure OkBtnClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  EventEditForm: TEventEditForm;

implementation

{$R *.dfm}

uses DBModelUnit;

procedure TEventEditForm.CancelBtnClick(Sender: TObject);
begin
  DBModel.ADQueryActualList.Cancel;
  EventEditForm.Close;
end;

procedure TEventEditForm.OkBtnClick(Sender: TObject);
begin
  if DBModel.ADQueryActualList.Modified then
  begin
    if DBModel.ADQueryActualList.FieldByName('date_event_end').AsString = '' then
      DBModel.ADQueryActualList.FieldByName('date_event_end').Value := DBEdit3.Text;

    DBModel.ADQueryActualList.post;

  end;

  EventEditForm.Close;
end;

end.
